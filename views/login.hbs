
<div class="login-container">
    <h2>Hisobga kirish</h2>
    {{#if error}}
        <p class="error">Parol yoki Username Xato !</p>
    {{/if}}

    <form action="/login" method="POST" class="login-form">
        <div class="form-group">
            <label for="username">Foydalanuvchi nomi</label>
            <input type="text" id="username" name="username" placeholder="Username kiriting" required>
        </div>

        <div class="form-group">
            <label for="password">Parol</label>
            <input type="password" id="password" name="password" placeholder="Parol kiriting" required>
        </div>

        <button type="submit" class="login-btn">Kirish</button>
        {{#if error}}
            <a href="/signup">Akkaunt Yaratish</a>
        {{/if}}
    </form>
</div>